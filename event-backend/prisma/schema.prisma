datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum EventStatus {
  UPCOMING
  COMPLETED
  CANCELLED
}

enum Role{
  USER
  ORGANIZER
  ADMIN
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  role     Role     @default(USER)

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt   

  tickets  Ticket[] 
  event    Event[] 
}

model Ticket {
  id       Int      @id @default(autoincrement())

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt 

  user     User     @relation(fields: [userId], references: [id])
  userId   Int
  event    Event    @relation(fields: [eventId], references: [id])
  eventId  Int
}

model Event {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  date        DateTime
  location    String
  isTicket    Boolean
  prices      Float 
  status      EventStatus  @default(UPCOMING)

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt 

  organizer     User     @relation(fields: [organizerId], references: [id])
  organizerId   Int
  ticket      Ticket[]
}
